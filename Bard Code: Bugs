import React from 'react';
import { View, Text, Button, StyleSheet } from 'react-native';

const BrainCells = (years, delta) => {
  let numOfBrainCells = 10000;

  for (let i = 0; i < years; i++) {
    if (numOfBrainCells > 0) {
      numOfBrainCells -= Math.random() * (delta + 1);
    } else {
      console.log('Vidhat has', numOfBrainCells, 'brain cells! Yay!');
      return false;
    }
  }

  console.log('Vidhat has', numOfBrainCells, 'brain cells. L bozo.');
  return true;
};

const alive = () => {
  const years = parseInt(prompt('How many years will your simulation run? Enter as an integer: '));
  const delta = parseInt(prompt('How much do you want the number of brain cells to change within each year? Enter as an integer: '));

  if (BrainCells(years, delta) === true) {
    console.log('???? Vidhat has brain cells?!?!?! errrrrr');
  } else {
    console.log('wowow everything is normal and vidhat does not have braincells! phew');
  }
};

const App = () => {
  return (
    <View style={styles.container}>
      <Text style={styles.title}>Brain Cells Simulator</Text>
      <Button title="Run Simulation" onPress={alive} />
    </View>
  );
};

const styles = StyleSheet.create({
  container: {
    flex: 1,
    backgroundColor: '#fff',
    alignItems: 'center',
    justifyContent: 'center',
  },
  title: {
    fontSize: 24,
    fontWeight: 'bold',
    marginBottom: 20,
  },
});

export default App;
